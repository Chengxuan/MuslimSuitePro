                    <Image Name="imageSeven" Source="../images/imageSeven.jpg" Tag="imageSeven.jpg" Stretch="UniformToFill" Tapped="Image_Tapped_1"  />
                </Border>

                <Border Name="bbimageEight" CornerRadius="5" BorderThickness="4" BorderBrush="White" Margin="20">
                    <Image Name="imageEight" Source="../images/imageEight.jpg" Tag="imageEight.jpg" Stretch="UniformToFill" Tapped="Image_Tapped_1"  />
