                <Image Name="imageTwelve" Source="../images/imageTwelve.jpg" Tag="imageTwelve.jpg" Stretch="UniformToFill" Tapped="Image_Tapped_1"  />
            </Border>
        </ListView>
    </Grid>
</Page>